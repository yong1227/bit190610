<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.web.mapper.CustomerMapper">

  <insert id="insertCustomer" parameterType="com.bitcamp.web.domain.CustomerDTO">
    insert into CUSTOMERS (CUSTOMER_NAME,PASSWORD,SSN,PHONE,CITY,ADDRESS,POSTALCODE,PHOTO)
    values (#{customerName},#{password},#{ssn},#{phone},#{city},#{address},#{postalcode},#{photo})
  </insert>

  <select id="selectCustomers" resultType="com.bitcamp.web.domain.CustomerDTO">
    select * from CUSTOMERS
  </select>
  <select id="selectCustomersByWord" resultType="com.bitcamp.web.domain.CustomerDTO" parameterType="com.bitcamp.web.domain.CustomerDTO">
    select * from CUSTOMERS where CUSTOMER_NAME = #{customerName}
  </select>
  <select id="selectCustomerByCustomerId" resultType="com.bitcamp.web.domain.CustomerDTO" parameterType="string">
    select * from CUSTOMERS where CUSTOMER_ID = #{value}
  </select>

  <update id="updateCustomer" parameterType="com.bitcamp.web.domain.CustomerDTO">
    update CUSTOMERS set
    CUSTOMER_NAME = #{customerName},
    PASSWORD = #{password},
    SSN = #{ssn},
    PHONE = #{phone},
    CITY = #{city},
    ADDRESS = #{address},
    POSTALCODE = #{postalcode},
    PHOTO = #{photo},
    where CUSTOMER_ID = #{customerId}
  </update>

  <delete id="deleteCustomer" parameterType="com.bitcamp.web.domain.CustomerDTO">
    delete from CUSTOMERS where CUSTOMER_ID = #{customerId}
  </delete>
</mapper>