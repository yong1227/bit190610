<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.bitcamp.web.mapper.ShipperMapper">

  <resultMap id="shipperMap" type="com.bitcamp.web.domain.ShipperDTO">
    <id property="shipperId" column="SHIPPER_ID"/>
    <result property="shipperName" column="SHIPPER_NAME"/>
    <result property="phone" column="PHONE"/>
  </resultMap>
  
  <insert id="insertShipper" parameterType="com.bitcamp.web.domain.ShipperDTO">
    insert into SHIPPERS (SHIPPER_NAME,PHONE)
    values (#{shipperName},#{phone})
  </insert>

  
  <select id="selectShippers" resultMap="shipperMap">
    select * from SHIPPERS
  </select>
  <select id="selectShippersByWord" resultMap="shipperMap" parameterType="com.bitcamp.web.domain.ShipperDTO">
    select * from SHIPPERS where SHIPPER_NAME = #{shipperName}
  </select>
  <select id="selectShipperByShipperId" resultMap="shipperMap" parameterType="string">
    select * from SHIPPERS where SHIPPER_ID = #{value}
  </select>

  <update id="updateShipper" parameterType="com.bitcamp.web.domain.ShipperDTO">
    update SHIPPERS set
    SHIPPER_NAME = #{shipperName},
    PHONE = #{phone}
   
    where SHIPPER_ID = #{shipperId}
  </update>

  <delete id="deleteShipper" parameterType="com.bitcamp.web.domain.ShipperDTO">
    delete from SHIPPERS where SHIPPER_ID = #{shipperId}
  </delete>
</mapper>